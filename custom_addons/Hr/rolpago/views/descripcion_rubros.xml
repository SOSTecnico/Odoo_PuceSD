<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="rolpago.descripcion_rubros_form" model="ir.ui.view">
            <field name="name">descripcion rubros formulario</field>
            <field name="model">rolpago.descripcion_rubros</field>
            <field name="arch" type="xml">
                <form string="_form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="tipo_rubro"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="rolpago.descripcion_rubros_tree" model="ir.ui.view">
            <field name="name">descripcion rubros arbol</field>
            <field name="model">rolpago.descripcion_rubros</field>
            <field name="arch" type="xml">
                <tree string="ModelTitle">
                    <field name="name"/>
                    <field name="tipo_rubro"/>
                </tree>
            </field>
        </record>

        <record id="rolpago.descripcion_rubros" model="ir.actions.act_window">
            <field name="name">Tipos de Rubros</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rolpago.descripcion_rubros</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem sequence="3" name="Tipos de Rubros" id="rolpago.descripcion_rubros_menu" parent="rolpago.roles_menu_principal"
                  action="rolpago.descripcion_rubros"/>

    </data>
</odoo>