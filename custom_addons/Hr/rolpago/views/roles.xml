<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="rolpago.roles_form" model="ir.ui.view">
            <field name="name">roles form</field>
            <field name="model">rolpago.roles</field>
            <field name="arch" type="xml">
                <form string="rolpago.roles_form_form">
                    <header>
                        <button type="object" name="ILG003" string="ACTUALIZAR EMPELADOS"></button>
                    </header>
                    <sheet>
                        <group>
                            <field name="periodo"/>
                            <field name="empleado_id"/>
                            <field name="rubros_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="rolpago.roles_accion" model="ir.actions.act_window">
            <field name="name">Roles</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rolpago.roles</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem name="Roles de Pago" id="rolpago.roles_menu_principal"
                  web_icon="rolpago,static/description/icon.png"/>
        <menuitem sequence="1" name="Roles" id="rolpago.roles_menu" parent="rolpago.roles_menu_principal"
                  action="rolpago.roles_accion"/>

    </data>
</odoo>