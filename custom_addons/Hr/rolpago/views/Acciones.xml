<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="rolpago.acciones_view_form" model="ir.ui.view">
            <field name="name">rolpago.acciones_view_form</field>
            <field name="model">rolpago.acciones</field>
            <field name="arch" type="xml">
                <form string="rolpago.acciones_form">
                    <sheet>
                        <group>
                            <h3>Para actualizar la n√≥mina de empleados favor de click en "ACTUALIZAR"</h3>
                        </group>
                    </sheet>
                    <footer>
                        <button name="ILG003" string="ACTUALIZAR EMPLEADOS" type="object" class="oe_highlight"/>
                        <button name="ILG006" string="GENERAR ROLES" type="object" class="oe_highlight"/>
                        <button string="Cancelar" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="rolpago.acciones_action" model="ir.actions.act_window">
            <field name="name">Roles de Pago - Actualizar Empleados</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">rolpago.acciones</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Acciones" id="rolpago.acciones_menu" parent="rolpago.roles_menu_principal"></menuitem>

        <menuitem name="Actualizar Empleados" id="rolpago.actualizar_empleados_menu" parent="rolpago.acciones_menu"
                  action="rolpago.acciones_action"></menuitem>

        <menuitem name="Generar Roles" id="rolpago.generar_roles" parent="rolpago.acciones_menu"
                  action="rolpago.acciones_action"></menuitem>

    </data>
</odoo>