<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="racetime.horarios_form_view" model="ir.ui.view">
            <field name="name">racetime.horarios.form</field>
            <field name="model">racetime.horarios</field>
            <field name="arch" type="xml">
                <form string="Horarios">
                    <sheet>
                        <widget name="web_ribbon" title="ARCHIVADO" bg_color="bg-danger"
                                attrs="{'invisible':[('active','=',True)]}"></widget>
                        <group col="4">

                            <field name="name"/>
                            <field name="tipo"/>
                            <newline></newline>
                            <field name="fecha_inicio"/>
                            <field name="fecha_fin"/>
                            <field name="hora_inicio" widget="float_time"/>
                            <field name="inicio_descanso" widget="float_time"/>
                            <field name="hora_fin" widget="float_time"/>
                            <field name="fin_descanso" widget="float_time"/>
                            <field name="dias" widget="dias_widget"/>


                        </group>
                        <field colspan="4" name="empleados_ids" nolabel="1"
                               context="{'tree_view_ref':'racetime.empleados_tree_view_inherit'}"></field>
                        <field name="active" invisible="1"/>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="racetime.horarios_tree_view" model="ir.ui.view">
            <field name="name">racetime.horarios.tree</field>
            <field name="model">racetime.horarios</field>
            <field name="arch" type="xml">
                <tree string="Horarios">
                    <field name="name"/>
                    <field name="tipo"/>
                    <field name="fecha_inicio"/>
                    <field name="fecha_fin"/>
                    <field name="hora_inicio" widget="float_time"/>
                    <field name="inicio_descanso" widget="float_time"/>
                    <field name="fin_descanso" widget="float_time"/>
                    <field name="hora_fin" widget="float_time"/>
                    <field name="dias" optional="hide" widget="dias_widget"/>
                </tree>
            </field>
        </record>

        <!--
                <record id="racetime.horarios_search_view" model="ir.ui.view">
                    <field name="name">.racetime.horarios.search</field>
                    <field name="model">.racetime.horarios</field>
