<odoo>
    <data>
        <template id="biometricos.list_biometricos" name="Listado de Biométricos">
            <t t-call="website.layout">
                <div class="oe_structure">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <table class="table" width="100">
                                    <thead>
                                        <tr>
                                            <th>Nombre</th>
                                            <th>Dirección IP</th>
                                            <th>Accion</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr t-foreach="biometricos" t-as="biometrico">
                                            <td>
                                                <span t-esc="biometrico.name"></span>
                                            </td>
                                            <td>
                                                <span t-esc="biometrico.ip_address"></span>
                                            </td>
                                            <td>
                                                <form action="/biometricos/open">
                                                    <input name="biometrico_id" type="hidden" t-att-value="biometrico.id"/>
                                                    <button type="submit" class="btn btn-primary">Abrir</button>
                                                </form>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>