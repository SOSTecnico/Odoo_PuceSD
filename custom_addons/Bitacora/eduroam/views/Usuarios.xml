            <field name="name">Enlace a Generar Usuarios EDUROAM</field>
            <field name="url">/eduroam/formulario</field>
            <field name="target">new</field>
        </record>

        <menuitem name="Generar SCRIPT" id="eduroam.generar_script_menu" parent="eduroam.main_menu"
