        <template id="eduroam.template_generar_usuario">
            <t t-call="website.layout">
                <div class="container mt-4">
                    <div>
                        <p class="alert alert-danger" t-if="error">
                            <t t-esc="error"/>
                            <t t-esc="message"></t>
                        </p>
                    </div>
                    <form class="bg-white rounded mx-5 p-4 shadow" method="POST" action="/eduroam/generar_usuarios">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div>
                            <label>Ingrese las CÃ©dulas:</label>
                            <input name="cedulas" class="form-control"></input>
                        </div>
                        <button class="btn btn-primary mt-3">CONSULTAR</button>
                    </form>
                </div>
            </t>
        </template>

        <template id="eduroam.template_eduroam_script">
            <t t-call="website.layout">
                <div class="container mt-4">
                    <div class="mx-4 p-4 shadow">
                        <style>
                            .users p{
                            margin:0
                            }
                        </style>
                        <div class="row users">
                            <div class="col-4" t-att-id="usuario['PIDM']" t-foreach="usuarios" t-as="usuario">
                                <button class="copy btn btn-sm btn-info">Copiar</button>
                                <div>
                                    <span>
                                        dn:
                                        <span>

                                            <span t-esc="'cn='+usuario['APELLIDOS'].replace('/',' ').upper()"></span>
                                            <span t-esc="usuario['PRIMER_NOMBRE'].upper()"></span>
                                            <span t-esc="usuario['SEGUNDO_NOMBRE'].upper()"></span>
                                            ,cn=Docentes,dc=pucesd,dc=edu,dc=ec
                                        </span>

                                    </span>
                                    <br/>
                                    <span>cn:
                                        <span t-esc="usuario['APELLIDOS'].replace('/',' ').upper()"></span>
                                        <span t-esc="usuario['PRIMER_NOMBRE'].upper()"></span>
                                        <span t-esc="usuario['SEGUNDO_NOMBRE'].upper()"></span>
                                    </span>
                                    <br/>
                                    <span>gidnumber: 500</span>
                                    <br/>
                                    <span>givenname:
                                        <span t-esc="usuario['PRIMER_NOMBRE'].upper()"></span>
                                        <span t-esc="usuario['SEGUNDO_NOMBRE'].upper()"></span>
                                    </span>
                                    <br/>
                                    <span>
                                        homedirectory:
                                        <span>
                                            <span t-esc="'/home/users/'+''.join([usuario['PRIMER_NOMBRE'][:1].lower(),usuario['SEGUNDO_NOMBRE'][:1].lower(),usuario['APELLIDOS'].split('/')[0].lower(),usuario['APELLIDOS'].split('/')[1][:1].lower()])"></span>
                                        </span>

                                    </span>
                                    <br/>
                                    <span>loginshell: /bin/sh</span>
                                    <br/>
                                    <span>mail:
                                        <span t-esc="''.join([usuario['PRIMER_NOMBRE'][:1].lower(),usuario['SEGUNDO_NOMBRE'][:1].lower(),usuario['APELLIDOS'].split('/')[0].lower(),usuario['APELLIDOS'].split('/')[1][:1].lower(),'@pucesd.edu.ec'])"></span>
                                    </span>
                                    <br/>
                                    <span>objectclass: inetOrgPerson</span>
                                    <br/>
                                    <span>objectclass: posixAccount</span>
                                    <br/>
                                    <span>objectclass: top</span>
                                    <br/>
                                    <span>sn:
                                        <span t-esc="usuario['APELLIDOS'].replace('/',' ').upper()"></span>
                                        <span t-esc="usuario['PRIMER_NOMBRE'].upper()"></span>
                                        <span t-esc="usuario['SEGUNDO_NOMBRE'].upper()"></span>
                                    </span>
                                    <br/>
                                    <span>
                                        uid:
                                        <span t-esc="''.join([usuario['PRIMER_NOMBRE'][:1].lower(),usuario['SEGUNDO_NOMBRE'][:1].lower(),usuario['APELLIDOS'].split('/')[0].lower(),usuario['APELLIDOS'].split('/')[1][:1].lower()])"></span>
                                    </span>
                                    <br/>
                                    <span>uidnumber:
                                        <span t-esc="usuario['PIDM']"></span>
                                    </span>
                                    <br/>
                                    <span>
                                        userpassword:
                                        <span t-esc="usuario['CEDULA']"></span>
                                    </span>
                                </div>

                            </div>
                        </div>
                        <script>
                            let button = document.getElementsByClassName('copy')
                            button.addEventListener('click',function(ev){
                            console.log(ev)
                            })
                        </script>
                        <div class="row">
                            <a href="/eduroam/formulario" class="mt-3 btn btn-secondary">Regresar</a>
                        </div>
                    </div>
                </div>
            </t>
        </template>


    </data>
