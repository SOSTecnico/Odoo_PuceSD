<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="reservas.reservaciones_form_view" model="ir.ui.view">
            <field name="name">reservas.reservaciones.form</field>
            <field name="model">reservas.reservaciones</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <form string="_form"/>
                            <field name="codigo"/>
                            <field name="sala"/>
                            <field name="asignatura"/>
                            <field name="responsable"/>
                            <field name="fecha_inicio"/>
                            <field name="hora_inicio" widget="float_time"/>
                            <field name="hora_final" widget="float_time"/>
                            <field name="fecha_final"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="reservas.reservaciones_tree_view" model="ir.ui.view">
            <field name="name">reservas.reservaciones.tree</field>
            <field name="model">reservas.reservaciones</field>
            <field name="arch" type="xml">
                <tree string="ModelTitle">
                    <field name="codigo"/>
                    <field name="sala"/>

                    <field name="asignatura"/>
                    <field name="responsable"/>
                    <field name="fecha_inicio"/>
                    <field name="hora_inicio" widget="float_time"/>
                    <field name="hora_final" widget="float_time"/>
                    <field name="fecha_final"/>
                </tree>
            </field>
        </record>

        <record id="reservas.reservaciones_act_window" model="ir.actions.act_window">
            <field name="name">Reservaciones</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">reservas.reservaciones</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem name="Reservacion" id="reservas.reservaciones_menu" parent="reservas.main_menu"
                  action="reservas.reservaciones_act_window"/>

    </data>
</odoo>